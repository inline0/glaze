{
  "name": "glaze-monorepo",
  "private": true,
  "packageManager": "bun@1.2.22",
  "workspaces": [
    "packages/*",
    "apps/*"
  ],
  "scripts": {
    "dev": "bun run --cwd apps/docs dev",
    "dev:docs": "bun run --cwd apps/docs dev",
    "build": "bun run --cwd packages/core build && bun run --cwd apps/docs build",
    "build:docs": "bun run --cwd apps/docs build",
    "test": "bun run --cwd packages/core test",
    "lint": "biome lint .",
    "format": "biome format --write .",
    "check": "biome check .",
    "typecheck": "tsc --noEmit -p packages/core/tsconfig.json && tsc --noEmit -p apps/docs/tsconfig.json"
  },
  "devDependencies": {
    "@biomejs/biome": "^2.3.11",
    "typescript": "^5.9.3"
  },
  "dependencies": {
    "onedocs": "0.1.25"
  }
}
